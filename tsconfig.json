{
  "compilerOptions": {
    "target": "ES2017",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                  
    "declaration": true,                              
    "declarationMap": true,                          
    "sourceMap": true,                               
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }, 
  "include": [
    "src"
  ]
}
